<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>

    <%= link_to '<button>Add To Catalogue</button>'.html_safe, new_clothing_path %><br>


    <% @clothings.each do |clothing| %>
      <% if clothing.quantity %>
        <div class="gallery_product col-lg-4 col-md-4 col-sm-4 col-xs-6 filter sprinkle">
            <div class="pic"><%= link_to image_tag(clothing.image_url.to_s), clothing_path(clothing.id) %></div><br>
            <%= clothing.description %> <br>
            <%= clothing.price %>

        </div>
      <% end %>
    <% end %>


  </body>
</html>
