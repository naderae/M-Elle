
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>

    <% if @clothing.images.count <= 1 %>
      <div class=" col-md-8 col-md-offset-2" >
        <% @clothing.images.each_with_index do |image, index| %>
        <span class="img-single">
          <%= image_tag (image.url) %>
        </span>
        <% end %>
        <div class="edit-delete">
          <% if current_user.try(:admin?) %>
            <%= link_to 'Edit', edit_clothing_path(@clothing) %> |
            <%= link_to 'Delete', clothing_path(@clothing), method: :delete, data: {confirm: "Are you sure you want to delete this piece? This cannot be undone!"} %>
          <% end %>
        </div>

      </div>
      <div class="col-md-2">
        <h3 class="piece-description"><%= @clothing.description %></h3>
        <h5>PRICE: $<%= @clothing.price %>.00</h5>
        <h5 id="color">COLOR: <%= @clothing.color %></h5>
      </div>
      <% else %>

        <div class=" col-md-8 col-md-offset-1" >
          <% @clothing.images.each_with_index do |image, index| %>
          <span class="img">
            <%= image_tag (image.url) %>
          </span>
          <% end %>
          <div class="edit-delete">
            <% if current_user.try(:admin?) %>
              <%= link_to 'Edit', edit_clothing_path(@clothing) %> |
              <%= link_to 'Delete', clothing_path(@clothing), method: :delete, data: {confirm: "Are you sure you want to delete this piece? This cannot be undone!"} %>
            <% end %>
          </div>

        </div>
        <div class="col-md-2">
          <h3 class="piece-description"><%= @clothing.description %></h3>
          <h5>PRICE: $<%= @clothing.price %>.00</h5>
          <h5 id="color">COLOR: <%= @clothing.color %></h5>
        </div>
    <% end %>

  </body>
</html>
