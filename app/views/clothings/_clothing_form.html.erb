

<%= form_for @clothing, {html: { multipart: true }} do |f|%>
  <%= f.label :category %>
  <%= f.select :category, ['Bodysuits', 'Dresses', 'Jackets', 'Jeans', 'Pants', 'Jumpsuits', 'Leggings', 'Outfits', 'Skirts', 'Tops', 'Tracksuits'], :prompt => 'Select One' %><br>

  <%= f.label :color %>
  <%= f.text_field :color%><br>

  <%= f.label :size %>
  <%= f.select :size, ['XXS', 'XS', 'S', 'M', 'L', 'XL', 'XXL' ], :prompt => 'Select One'%><br>

  <%= f.label :price %>
  <%= f.number_field :price%><br>

  <%= f.label :price_old %>
  <%= f.number_field :price_old%><br>

  <%= f.label :quantity %>
  <%= f.number_field :quantity%><br>

  <%= f.label :description %>
  <%= f.text_area :description%><br>

  <%= f.label :images %>
  <%= f.file_field :images, multiple: true %><br>

  <%= f.label :sale %>
  <%= f.select :sale, ['True', 'False'], :prompt => 'Select One'%><br>

  <%= f.label :new_collection %>
  <%= f.select :new_collection, ['True', 'False'], :prompt => 'Select One' %><br>


   <%= f.submit "Add Piece to Catalogue"%>
<% end %>
